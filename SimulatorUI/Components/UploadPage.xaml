<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="SimulatorUI.UploadPage"
             Title="UploadPage"
             BackgroundColor="{StaticResource Secondary}">

    <VerticalStackLayout Margin="100" Spacing="10"  WidthRequest="400">
        <Label 
            Text="Share Simulation" 
            TextColor="{StaticResource Light}" 
            FontSize="Medium" />
        <Frame 
            x:Name="EntryFrame"
            Padding="0"
            CornerRadius="6"
            BorderColor="{StaticResource Light}"
            HasShadow="False"
            BackgroundColor="Transparent" 
            HeightRequest="45">
            <Entry 
                x:Name="NameEntry" 
                TextColor="{StaticResource Light}" 
                Placeholder="Name"
                MaxLength="20" />
        </Frame>
        <Label 
            x:Name="NameError" 
            Text="Name must be between 4 and 20 characters" 
            IsVisible="False"
            TextColor="{StaticResource Error}" />
        <Line />

        <HorizontalStackLayout x:Name="ActionsLayout" Spacing="10">
            <Button 
                x:Name="ShareButton" 
                Text="Share" 
                WidthRequest="195" 
                TextColor="{StaticResource Primary}"
                BorderColor="{StaticResource Primary}"
                Background="Transparent" 
                Clicked="OnShare"
                AutomationId="ShareButton"
                SemanticProperties.Description="Share Simulation" />
            <Button 
                x:Name="CancelButton" 
                Text="Cancel" 
                WidthRequest="195"
                TextColor="{StaticResource Light}"
                BorderColor="{StaticResource Light}"
                Background="Transparent" 
                Clicked="OnCancel"
                AutomationId="CancelButton" 
                SemanticProperties.Description="Cancel Sharing" />
        </HorizontalStackLayout>

        <ActivityIndicator 
            x:Name="LoadingIndicator" 
            IsRunning="True" 
            IsVisible="False"
            Color="{StaticResource Primary}"
            HorizontalOptions="Center" />
    </VerticalStackLayout>
</ContentPage>
