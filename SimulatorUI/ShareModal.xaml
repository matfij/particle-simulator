<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="SimulatorUI.ShareModal"
             Title="ShareModal"
             BackgroundColor="#123">
    <VerticalStackLayout Margin="100" Spacing="10"  WidthRequest="400">
        <Label 
            Text="Share Simulation" 
            TextColor="#efe" 
            FontSize="Medium" />
        <Frame 
            x:Name="EntryFrame"
            Padding="0"
            CornerRadius="6"
            BorderColor="#efe"
            HasShadow="False"
            BackgroundColor="Transparent" 
            HeightRequest="45">
            <Entry 
                x:Name="NameEntry" 
                TextColor="#efe" 
                Placeholder="Name"
                MaxLength="20" />
        </Frame>
        <Label 
            x:Name="NameError" 
            Text="Name must be between 4 and 20 characters" 
            IsVisible="False"
            TextColor="Red" />
        <Line />

        <HorizontalStackLayout x:Name="ActionsLayout" Spacing="10">
            <Button 
                Text="Share" 
                WidthRequest="195" 
                TextColor="#efe"
                BorderColor="#efe"
                Background="Transparent" 
                Clicked="OnShare"
                AutomationId="ShareButton"
                SemanticProperties.Description="Share Simulation" />
            <Button 
                Text="Cancel" 
                WidthRequest="195"
                TextColor="#ccc"
                BorderColor="#ccc"
                Background="Transparent" 
                Clicked="OnCancel"
                AutomationId="CancelButton" 
                SemanticProperties.Description="Cancel Sharing" />
        </HorizontalStackLayout>

        <ActivityIndicator 
            x:Name="LoadingIndicator" 
            IsRunning="False" 
            IsVisible="False"
            Color="#efe"
            HorizontalOptions="Center" />

    </VerticalStackLayout>
</ContentPage>
